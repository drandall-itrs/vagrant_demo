<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="AccessFile" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="${GATEWAY_LOG_DIRECTORY}/kaazing-access.log"/>
        <param name="Append" value="false"/>
        <!-- max file size default is 10MB -->
        <!--param name="MaxFileSize" value="100000"/-->

        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %m%n"/>
        </layout>
    </appender>

    <appender name="EventsFile" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="${GATEWAY_LOG_DIRECTORY}/kaazing-events.log"/>
        <param name="Append" value="false"/>
        <!-- max file size default is 10MB -->
        <!--param name="MaxFileSize" value="100000"/-->

        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %m%n"/>
        </layout>
    </appender>

    <appender name="ProxyFile" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="${GATEWAY_LOG_DIRECTORY}/kaazing-proxy.log"/>
        <param name="Append" value="false"/>
        <!-- max file size default is 10MB -->
        <!--param name="MaxFileSize" value="100000"/-->

        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %m%n"/>
        </layout>
    </appender>

    <appender name="ErrorFile" class="org.apache.log4j.FileAppender">
        <param name="File" value="${GATEWAY_LOG_DIRECTORY}/kaazing-error.log"/>
        <param name="Append" value="false"/>

        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %m%n"/>
        </layout>
    </appender>

    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %m%n"/>
        </layout>
    </appender>

    <logger name="transport.http">
        <level value="warn"/>
        <appender-ref ref="AccessFile"/>
    </logger>

    <logger name="transport.wsn">
        <level value="warn"/>
        <appender-ref ref="AccessFile"/>
    </logger>

    <logger name="transport.wseb">
        <level value="warn"/>
        <appender-ref ref="AccessFile"/>
    </logger>

    <logger name="com.kaazing.gateway.server.service.proxy">
        <level value="warn"/>
        <appender-ref ref="ProxyFile"/>
    </logger>

    <logger name="com.kaazing.gateway.server">
        <level value="warn"/>
    </logger>

    <logger name="com.kaazing.gateway.server.Gateway">
        <level value="info"/> 
        <appender-ref ref="STDOUT"/>             
    </logger>

    <logger name="ha">
        <level value="info"/> 
        <appender-ref ref="STDOUT"/>             
    </logger>

    <logger name="messaging">
        <level value="info"/> 
        <appender-ref ref="STDOUT"/>             
    </logger>

    <logger name="messaging.ha">
        <level value="info"/> 
        <appender-ref ref="STDOUT"/>             
    </logger>
    
    <!--
    <root>
        <priority value="warn"/>
        <appender-ref ref="ErrorFile"/>        
    </root>
    -->
    
</log4j:configuration>
