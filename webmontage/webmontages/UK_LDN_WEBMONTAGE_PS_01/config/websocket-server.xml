<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Kaazing Gateway and Login Module -->
	<bean name="kaazingLoginModule" class="com.itrsgroup.websocket.KaazingLoginModule">
		<property name="enabled" value="true" />
	</bean>

	<bean id="kaazingGateway" class="com.kaazing.gateway.server.GatewayFactory" factory-method="createGateway"
		depends-on="kaazingLoginModule,jmsBroker" init-method="launch" destroy-method="destroy"
		scope="singleton" >
		<property name="properties">
			<props>
				<prop key="GATEWAY_HOME">#{ systemProperties['GATEWAY_HOME'] }</prop>
				<prop key="GATEWAY_CONFIG">#{ systemProperties['GATEWAY_CONFIG'] }</prop>
				<prop key="GATEWAY_CONFIG_DIRECTORY">#{ systemProperties['GENEOSWS_CONFIG_HOME'] }</prop>
				<prop key="GATEWAY_TEMP_DIRECTORY">#{ systemProperties['GENEOSWS_TEMP'] }</prop>
				<prop key="LOG4J_CONFIG">#{ systemProperties['LOG4J_CONFIG'] }</prop>
			</props>
		</property>
	</bean>

</beans>
