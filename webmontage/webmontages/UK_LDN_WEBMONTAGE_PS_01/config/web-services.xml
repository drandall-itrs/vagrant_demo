<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:beans="http://www.springframework.org/schema/beans" xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:annotation-config/>
	<bean class="com.itrsgroup.spring.property.SystemPropertiesReader">
		<property name="resource" value="file:#{ systemProperties['GENEOSWS_CONFIG_HOME'] }/system.properties" />
	</bean>

	<beans:import resource="jms-broker.xml" />	
	<beans:import resource="websocket-server.xml" />
	<beans:import resource="http-server.xml" />

</beans>
